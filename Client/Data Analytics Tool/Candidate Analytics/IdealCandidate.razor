/*Form Styling start*/

.popup-wrapper{
position: fixed; /* Stay in place */
        z-index: 1; /* Sit on top */
        padding-top: 100px; /* Location of the box */
        left: 0;
        top: 0;
        width: 100%; /* Full width */
        height: 100%; /* Full height */
        overflow: auto; /* Enable scroll if needed */
        background-color: rgb(0,0,0); /* Fallback color */
        background-color: rgba(0,0,0,0.6); /* Black w/ opacity */
}

.form-wrapper {
    font-family: 'Balsamiq Sans', sans-serif;
    background: #6c85a3;
    width: 100%;
    padding: 30px 90px 90px 90px;
    border: 6px solid rgba(0, 0, 0, 0.3);
    box-shadow: 20px 20px 0 rgba(0, 0, 0, 0.3);
    border-radius: 50px;
    position: relative;
}

.form-wrapper h2 {
    color: white;
    /*font-size: 60px;*/
    font-weight: 900;
    text-transform: uppercase;
}

.form-wrapper .row {
    width: 100%;
    display: grid;
    /*grid-template-columns: repeat(auto-fit,minmax(40%, 1fr));*/
    grid-template-columns: repeat(2, minmax(50%, 1fr));

}

.form-wrapper .row .col {
    position: relative;
    width: 100%;
    margin: 10px 20px 40px 0;
    transition: 0.5s;
}

.form-wrapper .row .form-group {
    position: relative;
    width: 100%;
    height: 40px;
    color: #ffffff;
}

/*These hide the weird up/down arrow */
.in::-webkit-outer-spin-button,
.in::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
}

.in[type=number] {
    -moz-appearance: textfield;
}

.in,
 select
{
    outline: none;
    /*font-size: 20px;*/
    padding: 10px 0 10px 20px;
    border: 5px solid rgba(41, 51, 63, 0.5);
    /*box-shadow: 10px 10px 0 rgba(0, 0, 0, 0.3);
    *background: rgba(0, 0, 0, 0.3);
    */
    box-shadow: rgba(50, 50, 93, 0.25) 0px 30px 60px -12px inset, rgba(0, 0, 0, 0.3) 0px 18px 36px -18px inset;
    background: transparent;
    color: white;
    border-radius: 10px;
}
.in-small{
    width: 100%;
    outline: none;
    /*font-size: 20px;*/
    padding: 10px 0 10px 20px;
    border: 5px solid rgba(41, 51, 63, 0.5);
    box-shadow: rgba(50, 50, 93, 0.25) 0px 30px 60px -12px inset, rgba(0, 0, 0, 0.3) 0px 18px 36px -18px inset;
    
    color: white;
    border-radius: 10px;
}
.form-wrapper .row .form-group label {
    color: #ffffff;
    /*font-size: 24px;*/
    margin: 0 0 0 10px;
    display: block;
    pointer-events: none;
}

.form-wrapper .row .form-group h2 {
    /*font-size: 20px;*/
    color: white;
    text-transform: capitalize;
    width: 30%;
    margin-right: 10%;
}

.check {
    color: green;

}

/*.row .col:nth-child(6) {
    margin-top: 64px;
}*/

.form-wrapper .row .col .form-group .border:focus {
    border: 5px solid #ffffff;
    transition: all 0.3s;
}
.form-wrapper .row .in[type="submit"] {
    border-bottom: 5px solid rgba(0, 0, 0, 0.3);
    box-shadow: 10px 10px 0 rgba(0, 0, 0, 0.3);
    padding: 10px;
    height: 100%;
    width: 100%;
    cursor: pointer;
    outline: none;
    background: transparent;
    text-transform: uppercase;
    color: #ffffff;
    line-height: 40px;
    font-size: 24px;
    font-weight: 700;
    border-radius: 45px;
    transition: all 0.4s;
    grid-column-start: span 2;
}

.form-wrapper .row .in[type="submit"]:hover {
    border: 5px solid rgba(255, 255, 255, 1);
    color: #ffffff;
    transition: all 0.4s;

}

fieldset {
    box-shadow: rgba(9, 30, 66, 0.25) 0px 1px 1px, rgba(9, 30, 66, 0.13) 0px 0px 1px 1px;
}

.form-wrapper .row legend {
    background: #6c85a3;
    color: white;
}

.form-wrapper .row .check .in[type="checkbox"] {
    height: 70%;
}


