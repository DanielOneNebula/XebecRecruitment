    .report {
        width: 90%;
        height: 95%;
        margin-left: 5%;
    }

    .report-nav {
        width: 100%;
        height: 10%;
        display: flex;
    }

    .report-buttons {
        width: 30%;
        margin: auto;
        height: 80%;
        color: black;
        font-weight: 700;
        font-size: 10px;
        border-radius: 5px;
        cursor: pointer;
    }

        .report-buttons:hover {
            width: 30%;
            margin: auto;
            height: 80%;
            color: ivory;
            font-weight: 700;
            font-size: 10px;
            border-radius: 5px;
            cursor: pointer;
            background-color: rgb(0,0,0,0.5);
        }

        .report-buttons:focus {
            width: 30%;
            margin: auto;
            height: 80%;
            color: ivory;
            font-weight: 700;
            font-size: 10px;
            border-radius: 5px;
            cursor: pointer;
            background-color: rgb(0,0,0,0.5);
        }


    .custom-select {
        transition: height .4s ease;
    }

    /*Dropdown styling - start*/
    .app-form-control {
        width: 100%;
        padding: 10px 0;
        background: none;
        border: none;
        border-bottom: 1px solid #666;
        /*color: #ddd;*/
        font-size: 14px;
        text-transform: uppercase;
        outline: none;
        cursor: pointer;
        margin: 10px;
    }

        .app-form-control::placeholder {
            color: #666;
        }
    option {
        background: #6c85a3;
        color: whitesmoke;
        margin: 10px;
    }

    .label {
        color: #937a5c;
        text-transform: uppercase;
    }

    /*Dropdown styling - end*/
</style>

