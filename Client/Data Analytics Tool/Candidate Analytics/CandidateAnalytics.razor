    .report-container {
        width: 95%;
        height: 90%;
        margin: auto;
        display: flex;
    }

    iframe {
        border-radius: 5px;
        height: 100%;
        width: 95%;
    }

    .enlarge-iframe-div {
        height: 50px;
        width: 5%;
        text-align: center;
        margin-top: 0;
    }

    .big {
        height: 88vh;
        width: 100%;
        background-color: black;
        position: absolute;
        z-index: 1;
        margin-top: -12vh;
        display: flex;
    }

    .big-main {
        height: 90%;
        margin-top: 2.5%;
        margin-bottom: 5%;
        width: 90%;
        margin-left: 5%;
    }

    .compress-iframe-div {
        height: 5%;
        justify-content: center;
        justify-items: center;
